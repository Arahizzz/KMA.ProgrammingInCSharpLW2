<Window x:Class="KMA.ProgrammingInCSharp.LW3Polishchuk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="Person Info" Height="800" Width="1000">
    <Grid>
        <Frame Source="Views/UserList.xaml" />
        <fa:ImageAwesome Icon="Refresh" Width="50" Height="50" Spin="True" Grid.ZIndex="2"
                         Visibility="{Binding LoaderVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</Window>
